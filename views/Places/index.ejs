
<body>
    <h1>All Places</h1>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
      <% for(let place of allPlace) { %>
        <div class="card col">
          <a href="/place/<%= place._id %>" class="place-link">
            <div class="card-img-overlay"></div>
            <img src="<%= place.image %>" class="card-img-top" alt="<%= place.title %>" style="height: 20rem;">
            <div class="card-body">
              <p class="card-text">
                <%= place.title %>
                <br>
                â‚¹<%= place.price.toLocaleString("en-IN") %> /day
              </p>
            </div>
          </a>
        </div>
      <% } %>
    </div>
</body>